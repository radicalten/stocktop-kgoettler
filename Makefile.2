CC		:= cc
CFLAGS 	:= -O3
LDFLAGS := $(CFLAGS) \
-I/opt/homebrew/include -L/opt/homebrew/lib -Wl,-rpath,/opthomebrew/lib \
-lcurses -lcurl -ljson-c -lm
TARGET  := myapp
SRCS    := $(wildcard src/*.c)
OBJS    := $(patsubst %.c,%.o,$(SRCS))
all: $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) $(LDFLAGS) -o $(TARGET)
