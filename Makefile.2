CC		:= cc
CFLAGS 	:= -O3 -flto
LDFLAGS := $(CFLAGS) -I/opt/homebrew/include -I/opt/homebrew/Cellar/json-c/0.18 -I/opt/homebrew/opt/ncurses/include -L/opt/homebrew/lib -L/opt/homebrew/opt/ncurses/lib -Wl,-rpath,/opthomebrew/lib -lcurses -lcurl -ljson-c -lm
TARGET  := myapp
SRCS    := $(wildcard src/*.c)
OBJS    := $(patsubst %.c,%.o,$(SRCS))
all: $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) $(LDFLAGS) -o $(TARGET) 
