CC=cc
CFLAGS 	:= -O3 -flto
LDFLAGS := $(CFLAGS) -I/opt/homebrew/include -L/opt/homebrew/lib -Wl,-rpath,/opt/homebrew/lib -lcurses -lcurl -ljson-c -lm
TARGET  := myapp
SRCS    := $(wildcard c8c-mod/*.c)
OBJS    := $(patsubst %.c,%.o,$(SRCS))
all: $(OBJS)
	$(CC) $(OBJS) $(CFLAGS) $(LDFLAGS) -o $(TARGET)
